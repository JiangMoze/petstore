<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.moze.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ControlServlet</servlet-name>
    <servlet-class>com.moze.control.ControlServlet</servlet-class>
    <init-param>
      <param-name>viewCategory</param-name>
      <param-value>/shop/viewCategory.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>viewProduct</param-name>
      <param-value>/shop/viewProduct.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>viewItem</param-name>
      <param-value>/shop/viewItem.jsp</param-value>
    </init-param>

    <init-param>
      <param-name>loginUser</param-name>
      <param-value>/shop/main.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>loginUserError</param-name>
      <param-value>/commons/error.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>registerUser</param-name>
      <param-value>/shop/main.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>editUser</param-name>
      <param-value>/shop/main.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>productQuery</param-name>
      <param-value>/shop/searchProducts.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>cartAdd</param-name>
      <param-value>/shop/addItemToCart.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>cartRemove</param-name>
      <param-value>/shop/addItemToCart.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>cartUpdate</param-name>
      <param-value>/shop/addItemToCart.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>cartCheckout</param-name>
      <param-value>/shop/checkOut.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>cartList</param-name>
      <param-value>/shop/addItemToCart.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>orderAdd</param-name>
      <param-value>/shop/main.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>loginMain</param-name>
      <param-value>/shop/loginMain.jsp</param-value>
    </init-param>
    <init-param>
      <param-name>orderMain</param-name>
      <param-value>/shop/newOrder.jsp</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControlServlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
